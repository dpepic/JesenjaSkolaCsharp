<Window x:Class="MutliWindowEdit.ArtikalED"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MutliWindowEdit"
        mc:Ignorable="d"
        Title="ArtikalED" Height="450" Width="800">
	<UniformGrid Columns="2">
		<Label Content="Naziv:" FontSize="42"/>
		<TextBox Name="nzv" Text="{Binding Naziv,UpdateSourceTrigger=Explicit}" FontSize="42"/>
		<Label Content="Cena:" FontSize="42"/>
		<TextBox Name="cn" Text="{Binding Cena,UpdateSourceTrigger=Explicit}" FontSize="42"/>
		<Button Content="Cancel" Click="Button_C" FontSize="42"/>
		<Button Content="OK" Click="Button_OK"	 FontSize="42"/>
	</UniformGrid>
</Window>
