<UserControl x:Class="Registar.EditOsobe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Registar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UniformGrid Columns="2">
		<Label Content="Ime:" FontSize="42"/>
		<TextBox Text="{Binding Ime}" FontSize="42"/>
		<Label Content="Prezime:" FontSize="42"/>
		<TextBox Text="{Binding Prezime}" FontSize="42"/>
		<Label Content="JMBG:" FontSize="42"/>
		<TextBox Text="{Binding JMBG}" FontSize="42"/>
	</UniformGrid>
</UserControl>
